@model UsluzniObrt.MVC.ViewModels.ItemCreateViewModel

@using (Html.BeginForm("CreateItem", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col control-label" })
        <div class="col">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Price, new { @class = "col control-label" })
        <div class="col">
            @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CategoryId, "Category Name", new { @class = "col control-label" })
        <div class="col">
            @Html.DropDownListFor(x => x.CategoryId, new SelectList(ViewBag.CategoryList, "Id", "Name"))
            @Html.ValidationMessageFor(m => m.CategoryId)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "col control-label" })
        <div class="col">
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Status, new { @class = "col control-label" })
        <div class="col">
            @Html.EnumDropDownListFor(m => m.Status, "Select Item Status", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <!-- Button -->
        <div class="col-md-offset-3 col-md-9">
            <input type="submit" class="btn btn-success" value="Create" />
        </div>
    </div>
}